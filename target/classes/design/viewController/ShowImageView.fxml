<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="design.viewController.ShowImageViewController"
            prefHeight="600.0" prefWidth="1200.0">

    <ImageView fx:id="left_button" preserveRatio="true">
<!--        <Image url="@./img/right.jpg"/>-->
        <fitHeight>100</fitHeight>
        <fitWidth>100</fitWidth>
    </ImageView>
    <ImageView fx:id="right_button" preserveRatio="true">
<!--        <Image url="@./img/left.jpg"/>-->
        <fitHeight>100</fitHeight>
        <fitWidth>100</fitWidth>
    </ImageView>

    <GridPane fx:id="imagePane" alignment="CENTER" prefHeight="450" prefWidth="1000" style="-fx-background-color:lightblue">
        <!--        <HBox fx:id="imageBox" alignment="CENTER">-->

        <!--        </HBox>-->
    </GridPane>
    <FlowPane alignment="CENTER" layoutX="100" layoutY="450" prefHeight="100.0" prefWidth="1000.0" style="-fx-background-color:pink">
        <children>
            <HBox spacing="10">
                <children>
                    <Button fx:id="b1" textFill="#c96a6a" prefWidth="60" prefHeight="30"></Button>
                    <Button fx:id="b2" textFill="#c96a6a" prefWidth="60" prefHeight="30"></Button>
                    <Button fx:id="b3" text="上一页" textFill="#c96a6a" prefWidth="60" prefHeight="30"></Button>
                    <Button fx:id="b4" text="下一页" textFill="#c96a6a" prefWidth="60" prefHeight="30"></Button>
                    <Button fx:id="b5" text="删除" textFill="#c96a6a" prefWidth="60" prefHeight="30"></Button>
                    <Button fx:id="slideShowButton" text="幻灯片播放" textFill="#c96a6a" prefWidth="100" prefHeight="30"></Button>
                    <Button fx:id="slideShowStopButton" text="幻灯片暂停" textFill="#c96a6a" prefWidth="100" prefHeight="30"></Button>
                </children>
            </HBox>
        </children>
    </FlowPane>

</AnchorPane>
