<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="design.viewController.ShowImageViewController"
            prefHeight="600.0" prefWidth="1200.0">

    <ImageView fx:id="left_button" preserveRatio="true">
<!--        <Image url="@./img/right.jpg"/>-->
        <fitHeight>100</fitHeight>
        <fitWidth>100</fitWidth>
    </ImageView>
    <ImageView fx:id="right_button" preserveRatio="true">
<!--        <Image url="@./img/left.jpg"/>-->
        <fitHeight>100</fitHeight>
        <fitWidth>100</fitWidth>
    </ImageView>

    <GridPane fx:id="imagePane" alignment="CENTER" prefHeight="450" prefWidth="1000" AnchorPane.leftAnchor="100" style="-fx-background-color:lightblue">
        <ScrollPane fx:id="imageScrollPane">
        </ScrollPane>
    </GridPane>
    <FlowPane fx:id="actionPane" alignment="CENTER" AnchorPane.leftAnchor="100" AnchorPane.topAnchor="450" prefHeight="75.0" prefWidth="1000.0"
              style="-fx-background-color:pink">
        <HBox spacing="10">
            <Button fx:id="enlargeButton" textFill="#c96a6a" prefWidth="60" prefHeight="30">
            </Button>
            <Button fx:id="reduceButton" textFill="#c96a6a" prefWidth="60" prefHeight="30">
            </Button>
            <Button fx:id="recoverButton" text="恢复原大小" textFill="#c96a6a" prefWidth="100" prefHeight="30">
            </Button>
            <Button fx:id="beforeButton" text="上一页" textFill="#c96a6a" prefWidth="60" prefHeight="30">
            </Button>
            <Button fx:id="nextButton" text="下一页" textFill="#c96a6a" prefWidth="60" prefHeight="30">
            </Button>
            <Button fx:id="slideShowButton" text="幻灯片播放" textFill="#c96a6a" prefWidth="100"
                    prefHeight="30">
            </Button>
            <Button fx:id="slideShowStopButton" text="幻灯片暂停" textFill="#c96a6a" prefWidth="100"
                    prefHeight="30">
            </Button>
        </HBox>
    </FlowPane>

</AnchorPane>
