<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="design.viewController.ShowImageViewController"
            prefHeight="600.0" prefWidth="1200.0">
    <Button fx:id="slideShowButton" text="幻灯片播放">
    </Button>
    <Button fx:id="slideShowStopButton" text="幻灯片暂停">
        <AnchorPane.topAnchor>20</AnchorPane.topAnchor>
    </Button>
    <ImageView fx:id="left_button" preserveRatio="true">
<!--        <Image url="@./img/right.jpg"/>-->
        <fitHeight>100</fitHeight>
        <fitWidth>100</fitWidth>
    </ImageView>
    <ImageView fx:id="right_button" preserveRatio="true">
<!--        <Image url="@./img/left.jpg"/>-->
        <fitHeight>100</fitHeight>
        <fitWidth>100</fitWidth>
    </ImageView>

    <GridPane fx:id="imagePane" alignment="CENTER" prefWidth="1000" prefHeight="500">

<!--        <HBox fx:id="imageBox" alignment="CENTER" spacing="">-->

<!--        </HBox>-->
    </GridPane>

</AnchorPane>
